<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>productsearch</managed-bean-name>
        <managed-bean-class>org.tec.ce.eTEC.beans.ProductSearchBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>productsservice</managed-bean-name>
        <managed-bean-class>org.tec.ce.eTEC.beans.ProductSearchService</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
      <from-view-id>/index.xhtml</from-view-id>

      <navigation-case>
          <from-outcome>Administrador</from-outcome>
          <to-view-id>/admin_sign_up.xhtml</to-view-id>
          <redirect/>
      </navigation-case>

      <navigation-case>
          <from-outcome>Cliente</from-outcome>
          <to-view-id>/customer_log_in.xhtml</to-view-id>
          <redirect/>
      </navigation-case>

        <navigation-case>
            <from-outcome>Graph</from-outcome>
            <to-view-id>/graph_test.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin_sign_up.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin_home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/customer_log_in.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>RegistrarUsuario</from-outcome>
            <to-view-id>/customer_sign_up.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/customer_menu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/customer_sign_up.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/customer_log_in.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/customer_menu.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>shop</from-outcome>
            <to-view-id>/customer_search_product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/customer_search_product.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>verProducto</from-outcome>
            <to-view-id>/product_details.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/product_details.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>hacerCheckout</from-outcome>
            <to-view-id>/products_cart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>atrás</from-outcome>
            <to-view-id>/customer_search_product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/products_cart.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>pagarVolver</from-outcome>
            <to-view-id>/customer_search_product.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>atrás</from-outcome>
            <to-view-id>/product_details.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <application>
        <navigation-handler>
            org.primefaces.mobile.application.MobileNavigationHandler
        </navigation-handler>
    </application>

</faces-config>